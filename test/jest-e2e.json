{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".e2e-spec.ts$",
    "transform": {
        "^.+\\.ts$": "ts-jest"
    },
    "moduleNameMapper": {
        "^@/(.*)$": "<rootDir>/../src/$1"
    },
    "setupFilesAfterEnv": ["<rootDir>/setup.ts"],
    "maxWorkers": 1
}
